@{
    ViewBag.Title = "Home";
}

<section id="hero">
    <div class="hero-content">
        <h1>Welcome to Position Description WebApp</h1>
        <p>Oladoyin's Employee Management System</p>
        <a href="#cta" class="cta-btn">Get Started</a>
    </div>
</section>

<section id="about">
    <div class="about-container">
        <h2>About Oladoyin's PD-EMS</h2>
        <p>I developed this system to manage employee information, track performance, and streamline HR processes.</p>
    </div>
</section>

<section id="features">
    <h2>Features</h2>
    <div class="features-grid">
        <div class="feature-item">
            <img src="~/Content/images/eim-icon.png" alt="Employee Info Management Icon" />
            <h3>Employee Info Management</h3>
            <p>Centralized storage and management of comprehensive employee data.</p>
        </div>
        <div class="feature-item">
            <img src="~/Content/images/pm-icon.png" alt="Performance Management Icon" />
            <h3>Performance Management</h3>
            <p>Track and evaluate employee performance with goal setting and appraisals.</p>
        </div>
        <div class="feature-item">
            <img src="~/Content/images/payroll-icon.png" alt="Payroll Management Icon" />
            <h3>Payroll Management</h3>
            <p>Automate payroll processes, ensuring timely and accurate payments.</p>
        </div>
        <div class="feature-item">
            <img src="~/Content/images/ess-icon.png" alt="Employee Self-Service Icon" />
            <h3>Employee Self-Service</h3>
            <p>Empower employees to manage their own information and HR tasks.</p>
        </div>
    </div>
</section>

<section id="cta">
    <h2>Ready to Get Started?</h2>
    <p>Let's dive into a highly efficient employee management App.</p>
    <a href="/dashboard" class="cta-btn">Go to Dashboard</a>
</section>
