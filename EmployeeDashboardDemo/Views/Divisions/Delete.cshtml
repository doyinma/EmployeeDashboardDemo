@model EmployeeDashboardDemo.Models.Division

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Delete Division";
}

<div class="dashboard">
    <main class="main-content">
        <section id="delete-division">
            <h2>Delete Division</h2>
            <p>Are you sure you want to delete the division: <strong>@Model.Name</strong>?</p>

            @using (Html.BeginForm("Delete", "Divisions", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="form-group buttons">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <a href="@Url.Action("Index", "Divisions")" class="btn btn-secondary">Cancel</a>
                </div>
            }
        </section>
    </main>
</div>
