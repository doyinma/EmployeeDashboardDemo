@model EmployeeDashboardDemo.Models.Department

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Delete Department";
}

<div class="dashboard">
    <main class="main-content">
        <section id="delete-department">
            <h2>Delete Department</h2>
            <p>Are you sure you want to delete this department?</p>

            <div class="form-group">
                <label><strong>Department Name:</strong></label>
                <p>@Model.Name</p>
            </div>

            <div class="form-group">
                <label><strong>Division:</strong></label>
                <p>@(Model.Division != null ? Model.Division.Name : "Not Available")</p>

            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="form-group buttons">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <a href="@Url.Action("Index", "Departments")" class="btn btn-secondary">Cancel</a>
                </div>
            }
        </section>
    </main>
</div>
