@model EmployeeDashboardDemo.Models.Department

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Add Department";
}

<div class="dashboard">
    <main class="main-content">
        <section id="add-department">
            <h2>Add Department</h2>
            <p>Please fill the form below to add a new department.</p>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @using (Html.BeginForm("Add", "Departments", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter department name" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "alert alert-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DivisionId, "Division")
                    @Html.DropDownList("DivisionId", null, "Select a division", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DivisionId, "", new { @class = "alert alert-danger" })
                </div>

                <div class="form-group buttons">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="@Url.Action("Index", "Departments")" class="btn btn-secondary">Cancel</a>
                </div>
            }
        </section>
    </main>
</div>
