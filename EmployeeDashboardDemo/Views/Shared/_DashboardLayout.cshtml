@{
    Layout = null;
    var currentYear = DateTime.Now.Year;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Oladoyin Employee Management System - @ViewBag.Title</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/Content/styles.css" />
    <link rel="stylesheet" href="~/Content/dashboard.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>

    <header>
        <nav>
            <div class="logo">
                <img src="~/Content/images/oladoyin-logo.png" alt="Logo" />
            </div>
            <ul class="menu">
                <li><a href="@Url.Content("~/#hero")">Home</a></li>
                <li><a href="@Url.Content("~/#about")">About</a></li>
                <li><a href="@Url.Content("~/#features")">Features</a></li>
                <li><a href="@Url.Content("~/#cta")">Get Started</a></li>
            </ul>
            <div class="action-btn">
                <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
            </div>
            <div class="menu-toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        </nav>
    </header>

    <div class="dashboard">
        <!-- Sidebar Partial -->
        @Html.Partial("_Sidebar")

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-copyright">
            &copy; @currentYear Oladoyin PD-EMS. All rights reserved.
        </div>
        <div class="footer-socials">
            <a href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook-f"></i></a>
            <a href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram"></i></a>
            <a href="https://twitter.com/" target="_blank"><i class="fab fa-twitter"></i></a>
        </div>
    </footer>

    <script src="~/js/script.js"></script>
</body>
</html>
